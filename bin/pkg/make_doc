#!/bin/bash

PATH_SCRIPT="$(cd $(/usr/bin/dirname $(type -p -- $0 || echo $0));pwd)"
PYTHONPATH=$PATH_SCRIPT/../../opensvc
cd $PYTHONPATH

echo "* update service templates"
sudo PYTHONPATH=$PYTHONPATH python core/objects/svcdict.py

echo "* update user templates"
sudo PYTHONPATH=$PYTHONPATH python core/objects/usrdict.py

echo "* update secret templates"
sudo PYTHONPATH=$PYTHONPATH python core/objects/secdict.py

echo "* update configmap templates"
sudo PYTHONPATH=$PYTHONPATH python core/objects/cfgdict.py

echo "* update cluster templates"
sudo PYTHONPATH=$PYTHONPATH python core/objects/ccfgdict.py

echo "* update node templates"
sudo PYTHONPATH=$PYTHONPATH python core/node/nodedict.py

echo "* update daemon events"
PYTHONPATH=$PYTHONPATH python daemon/events.py | sudo tee $PATH_SCRIPT/../../usr/share/doc/daemon.events >/dev/null

